{
  "AppSettings": {
    "Version": "1.0.0",
    "Name": "MMO Tool - All-in-One Social Media Manager",
    "Author": "MMO Tool Team",
    "Description": "Professional Social Media Automation Tool"
  },
  "Database": {
    "ConnectionString": "Data Source=Data\\mmotool.db",
    "Provider": "SQLite"
  },
  "Logging": {
    "LogLevel": "Information",
    "LogFile": "Logs\\mmotool.log",
    "MaxFileSize": "10MB",
    "MaxFiles": 5
  },
  "Proxy": {
    "Enabled": true,
    "RotationInterval": 300,
    "TestUrl": "http://httpbin.org/ip",
    "Timeout": 30
  },
  "Automation": {
    "DefaultDelay": {
      "Min": 30,
      "Max": 60
    },
    "MaxConcurrentAccounts": 10,
    "AntiDetection": {
      "RandomDelays": true,
      "HumanLikeBehavior": true,
      "RandomUserAgents": true
    }
  },
  "JobSystem": {
    "Platforms": [
      {
        "Name": "Golike",
        "ApiUrl": "https://api.golike.com",
        "Enabled": true
      },
      {
        "Name": "Traodoisub",
        "ApiUrl": "https://api.traodoisub.com",
        "Enabled": true
      },
      {
        "Name": "Tuongtaccheo",
        "ApiUrl": "https://api.tuongtaccheo.com",
        "Enabled": true
      }
    ],
    "CheckInterval": 60,
    "MaxJobsPerAccount": 50
  },
  "SocialMedia": {
    "Facebook": {
      "Enabled": true,
      "RegistrationUrl": "https://www.facebook.com/reg/",
      "MaxAccountsPerProxy": 3
    },
    "Instagram": {
      "Enabled": true,
      "RegistrationUrl": "https://www.instagram.com/accounts/emailsignup/",
      "MaxAccountsPerProxy": 2
    },
    "TikTok": {
      "Enabled": true,
      "RegistrationUrl": "https://www.tiktok.com/signup",
      "MaxAccountsPerProxy": 2
    },
    "Twitter": {
      "Enabled": true,
      "RegistrationUrl": "https://twitter.com/i/flow/signup",
      "MaxAccountsPerProxy": 3
    },
    "YouTube": {
      "Enabled": true,
      "RegistrationUrl": "https://accounts.google.com/signup",
      "MaxAccountsPerProxy": 2
    }
  }
}